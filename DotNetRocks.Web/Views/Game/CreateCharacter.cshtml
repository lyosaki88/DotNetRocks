@model DotNetRocks.Web.ViewModels.Game.CreateCharacterViewModel
@{
    ViewBag.Title = "创建角色";
}

<div class="row">
    <div id="createCharacterForm" class="col-md-offset-4 col-md-4" style="border:solid;border-color:gray;border-radius:20px;margin-top:5%;">
        @using (Html.BeginForm("CreateCharacter", "Game", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>创建角色</h4>
            <hr />
            <div class="form-group">
                @Html.LabelFor(x => x.Name, new { @class = "col-md-3 control-label" })
                @Html.ValidationMessageFor(x => x.Name)
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" class="btn btn-default" value="创建" />
                </div>
            </div>
        }
    </div>
</div>
